<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/author"
              android:paddingLeft="8dp"
              android:id="@+id/auther_title" android:paddingStart="8dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="aia"
              android:paddingLeft="8dp"
              android:id="@+id/tv_auther"
              app:layout_constraintTop_toTopOf="@+id/auther_title"
              app:layout_constraintStart_toEndOf="@+id/auther_title" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp" android:paddingStart="8dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/tv_auther"
              android:id="@+id/tv_content"
              android:paddingLeft="12dp"
    />
</android.support.constraint.ConstraintLayout>